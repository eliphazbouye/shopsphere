# App
APP_PORT=4000
NODE_ENV=development

# Prisma / Database
# Format expected by prisma: mysql://USER:PASSWORD@HOST:PORT/DATABASE
# When using Docker Compose, these will be replaced by the db service values
DATABASE_HOST=127.0.0.1
DATABASE_PORT=3306
DATABASE_USER=root
DATABASE_PASSWORD=changeme
DATABASE_NAME=sneakers_db
DATABASE_URL=mysql://${DATABASE_USER}:${DATABASE_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/${DATABASE_NAME}

# Docker Compose variables (used by docker-compose.yml)
MYSQL_ROOT_PASSWORD=changeme
MYSQL_DATABASE=${DATABASE_NAME}
MYSQL_USER=${DATABASE_USER}
MYSQL_PASSWORD=${DATABASE_PASSWORD}
MYSQL_PORT=3306

PHPMYADMIN_PORT=8080

# Logging
LOG_LEVEL=info