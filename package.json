{
  "name": "shopshere-api",
  "version": "0.1.0",
  "private": true,
  "description": "Boilerplate API: pnpm + TypeScript + Express v5 + Zod + Prisma (no models)",
  "engines": {
    "node": ">=18",
    "pnpm": ">=10.13"
  },
  "scripts": {
    "dev": "tsx --watch --env-file=.env src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "lint": "eslint --ext .ts src || true",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "prepare": "npx prisma generate || true"
  },
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "zod": "^4.1.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.34.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "prisma": "^6.14.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}